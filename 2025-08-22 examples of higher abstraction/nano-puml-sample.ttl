@prefix nano: <https://nanoservices.dev/ontology#> .
@prefix ex:   <https://example.org/ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

#########
# COMPONENT DEMO (System ↔ Port ↔ Perspective)
#########

ex:OrderSystem a nano:System ;
  rdfs:label "Order System" ;
  nano:port ex:OrderSystem_port .

ex:OrderSystem_port a nano:Port ;
  nano:allows   ex:IOrderAPI_v2_deEU ;     # provided
  nano:requires ex:IPaymentAPI_v1 .        # required

ex:PaymentSystem a nano:System ;
  rdfs:label "Payment System" ;
  nano:port ex:PaymentSystem_port .

ex:PaymentSystem_port a nano:Port ;
  nano:allows   ex:IPaymentAPI_v1 ;
  nano:requires ex:IOrderAPI_v2_deEU .

ex:IOrderAPI_v2_deEU a nano:Perspective ;
  rdfs:label "IOrderAPI_v2_deEU" .

ex:IPaymentAPI_v1 a nano:Perspective ;
  rdfs:label "IPaymentAPI_v1" .


#########
# ACTIVITY DEMO (Plan / Tasks / NanoServices / Message)
#########

# Service & Schedule are optional for the activity generator,
# included here to show the wider ontology in action.
ex:DeliveryService a nano:Service ;
  rdfs:label "Delivery Service" ;
  nano:plans ex:GoLivePlan ;
  nano:fulfills ex:GoLivePlan .

ex:Q3Roadmap a nano:Schedule ;
  rdfs:label "Q3 Roadmap" ;
  nano:world  ex:DeliveryService ;
  nano:idea   ex:GoLivePlan ;
  nano:separates ex:DeliveryService ;
  nano:sequences ex:GoLivePlan .

# The Plan that you should pass as a full URI into the viewer:
#   https://example.org/ns#GoLivePlan
ex:GoLivePlan a nano:Plan ;
  rdfs:label "Go-Live Plan" ;
  nano:tasks ex:CutRelease, ex:RunTests, ex:ApproveRelease, ex:PublishToRegistry .

# Tasks
ex:CutRelease a nano:Task ; rdfs:label "Cut Release" .
ex:RunTests a nano:Task ; rdfs:label "Run Tests" .
ex:ApproveRelease a nano:Task ; rdfs:label "Approve Release" .
ex:PublishToRegistry a nano:Task ; rdfs:label "Publish to Registry" .

# Order (flows)
ex:CutRelease nano:precedes ex:RunTests .
ex:RunTests nano:precedes ex:ApproveRelease .
ex:ApproveRelease nano:precedes ex:PublishToRegistry .

# Executors (NanoServices / swimlanes)
ex:DevOpsTeam a nano:NanoService ;
  rdfs:label "DevOps Team" ;
  nano:executes ex:CutRelease, ex:PublishToRegistry .

ex:CIWorker a nano:NanoService ;
  rdfs:label "CI Worker" ;
  nano:executes ex:RunTests .

ex:ReleaseManager a nano:NanoService ;
  rdfs:label "Release Manager" ;
  nano:executes ex:ApproveRelease .

# Message generated by a task and owned by a (possibly other) NanoService
ex:ReleaseNote a nano:Message ;
  rdfs:label "releaseNote" ;
  nano:represents ex:PublishToRegistry ;
  nano:belongsTo ex:ReleaseManager .
